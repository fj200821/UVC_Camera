<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:alpha="0.5"
    android:background="@color/color_Tool_Background"
    android:gravity="center"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="5dp"></ImageView>
        <!--android:src="@mipmap/icon_readsense_home"></ImageView>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tool_devices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_devices"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:src="@drawable/ic_webcam"></ImageView>

        <TextView
            android:id="@+id/textView_devices"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="相机设备"
            android:textColor="@color/color_Tool_Text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tool_camreg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_camreg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/imageview_devices"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:src="@drawable/ic_camera"></ImageView>

        <TextView
            android:id="@+id/textView_camreg"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="抓拍注册"
            android:textColor="@color/color_Tool_Text" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/tool_users"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_users"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/imageview_camreg"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:src="@drawable/ic_register"></ImageView>

        <TextView
            android:id="@+id/textView_facereg"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="注册列表"
            android:textColor="@color/color_Tool_Text" />
    </LinearLayout>

    <!--<LinearLayout
        android:id="@+id/tool_camconfig"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_camconfig"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/imageview_users"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:src="@drawable/ic_camconfig"></ImageView>

        <TextView
            android:id="@+id/textView_faceConfig"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="相机配置"
            android:textColor="@color/color_Tool_Text" />
    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/tool_config"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_config"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/imageview_users"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:src="@drawable/ic_config"></ImageView>

        <TextView
            android:id="@+id/textView_config"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/color_Tool_Text" />
    </LinearLayout>
</LinearLayout>
